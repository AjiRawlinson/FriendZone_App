<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:orientation = "vertical"
        android:layout_width = "match_parent"
        android:layout_height = "match_parent"
        android:gravity="center_horizontal"
        >

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="370dp"
            android:layout_weight="3"
            app:srcCompat="@drawable/friendzone" />


        <LinearLayout
            android:orientation = "horizontal"
            android:layout_width = "match_parent"
            android:layout_height = "wrap_content"
            android:gravity = "center_horizontal"
            android:layout_marginTop="50px"
            android:layout_weight = "3"
            >

            <LinearLayout
                android:orientation = "vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/ibSearch"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:onClick="search"
                android:scaleType="fitXY"
                android:background="#20BABA"
                app:srcCompat="@drawable/worker" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:clickable="false"
                    android:text="Search"
                    android:textStyle="bold"/>

            </LinearLayout>

                <LinearLayout
                    android:orientation = "vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
            <ImageButton
                android:id="@+id/ibList"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:onClick="list"
                android:scaleType="fitXY"
                android:background="#F7D12E"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                app:srcCompat="@drawable/team" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:clickable="false"
                        android:text="See All Friends"
                        android:textStyle="bold"/>

                </LinearLayout>

                    <LinearLayout
                        android:orientation = "vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
            <ImageButton
                android:id="@+id/ibSave"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:onClick="save"
                android:scaleType="fitXY"
                android:background="@null"
                app:srcCompat="@drawable/save" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:clickable="false"
                            android:text="Add New Friend"
                            android:textStyle="bold"/>

                    </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>